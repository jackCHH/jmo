<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "form-horizontal"}) do |f| %>

	<%= f.input :email%><br/>
	<%= f.input :password%><br/>

	<div class = "form-actions">
		<%= f.submit "Sign In", class: "btn btn-danger btn-lg"%>
	</div>
<% end %>

<%= render "devise/shared/links" %>

