<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: "form-horizontal"}) do |f| %>
  
    <!---replaces the original devise error notification to a much better looking one-->
    <%= f.error_notification %>

	<%= f.input :email%></br>
	<%= f.input :password%></br>
    <%= f.input :password_confirmation%></br>

	<!---form-actions will create a nice loooking gray area around the submit button-->
	<div class = "form-actions">
		<%= f.submit "Sign up", class: "btn btn-danger btn-lg" %>
	</div>
<% end %>

<%= render "devise/shared/links" %>
