<%= simple_form_for(@voice, html: {class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

	<div class="form-inputs">
    	<%= f.input :opinion, as: :text, input_html: {rows:"10"} %>
  	</div>
	</br>

  	<div class="form-actions">
    	<%= f.button :submit, class: "btn btn-danger" %>
  	</div>
	</br>
<% end %>
