source 'https://rubygems.org'

#native gems
gem 'rails', '4.0.5'

group :development do
	gem 'sqlite3'
end

gem 'sass-rails', '~> 4.0.2'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

#additional gems
gem 'bootstrap-sass'
gem "devise"
gem "simple_form"

group :production do
	gem "pg", '0.15.1'
	gem "rails_12factor", '0.0.2'
end
